<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NicksApp.ViewModels"
             x:Class="NicksApp.Views.MainPage">

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label 
            Text="Current Weather"
            FontSize="32"
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding WeatherCondition}"
            FontSize="24"
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding Temperature}"
            FontSize="48"
            HorizontalOptions="Center" />

        <Entry
            Text="{Binding MoodText}"
            Placeholder="How do you feel today?"
            PlaceholderColor="Gray"
            Margin="0,20"/>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button 
            Text="👍"
            Command="{Binding SaveMoodCommand}"
            CommandParameter="{x:Static x:Boolean.True}"/>

            <Button 
            Text="👎"
            Command="{Binding SaveMoodCommand}"
            CommandParameter="{x:Static x:Boolean.False}"/> 
        </HorizontalStackLayout>

        <Label 
            Text="{Binding ResultText}"
            FontSize="20"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>